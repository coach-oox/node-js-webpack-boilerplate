{
    "name": "js-webpack-boilerplate",
    "version": "1.0.0",
    "description": "Setting up Node.js, Express, WebPack, ESLint, Prettier and Babel.",
    "author": "coach-oox",
    "license": "MIT",
    "homepage": "https://github.com/coach-oox/node-js-webpack-boilerplate#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/coach-oox/node-js-webpack-boilerplate.git"
    },
    "bugs": {
        "url": "https://github.com/coach-oox/node-js-webpack-boilerplate/issues"
    },
    "scripts": {
        "build": "npm run build:server && npm run build:assets",
        "build:server": "babel src -d build",
        "build:assets": "webpack --mode=production",
        "start": "node build/server.js",
        "dev:server": "nodemon",
        "dev:assets": "webpack --mode=development -w"
    },
    "devDependencies": {
        "@babel/cli": "7.14.3",
        "@babel/core": "7.14.3",
        "@babel/node": "7.14.2",
        "@babel/preset-env": "7.14.2",
        "@babel/register": "7.13.16",
        "babel-loader": "8.2.2",
        "css-loader": "5.2.6",
        "eslint": "7.27.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-prettier": "3.4.0",
        "express": "4.17.1",
        "mini-css-extract-plugin": "1.6.0",
        "morgan": "1.10.0",
        "node-sass": "6.0.0",
        "nodemon": "2.0.7",
        "prettier": "2.3.0",
        "pug": "3.0.2",
        "sass": "1.34.0",
        "sass-loader": "11.1.1",
        "webpack": "5.37.1",
        "webpack-cli": "4.7.0"
    }
}
